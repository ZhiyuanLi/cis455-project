<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

 <web-app>
   <display-name>Channel Subscription Servlets</display-name>

   <context-param>
     <param-name>BDBstore</param-name>
     <param-value>/home/cis455/workspace/HW2/src/database</param-value>
   </context-param>
    
   <servlet>
     <servlet-name>xpath</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.XPathServlet</servlet-class> 
   </servlet>
    
   <servlet-mapping>
     <servlet-name>xpath</servlet-name>
     <url-pattern>/xpath</url-pattern>
   </servlet-mapping>

   <!-- add any additional servlets and servlet mappings here -->
   <!-- create account -->
   <servlet>
     <servlet-name>create</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.CreateServlet</servlet-class> 
   </servlet>

   <servlet-mapping>
     <servlet-name>create</servlet-name>
     <url-pattern>/create</url-pattern>
   </servlet-mapping>

   <!-- login account -->
   <servlet>
     <servlet-name>login</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.LoginServlet</servlet-class> 
   </servlet>

   <servlet-mapping>
     <servlet-name>login</servlet-name>
     <url-pattern>/login</url-pattern>
   </servlet-mapping>

   <!-- logout account -->
   <servlet>
     <servlet-name>logout</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.LogoutServlet</servlet-class> 
   </servlet>

   <servlet-mapping>
     <servlet-name>logout</servlet-name>
     <url-pattern>/logout</url-pattern>
   </servlet-mapping>

   <!-- channel -->
   <servlet>
     <servlet-name>channel</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.ChannelServlet</servlet-class> 
   </servlet>

   <servlet-mapping>
     <servlet-name>channel</servlet-name>
     <url-pattern>/channel</url-pattern>
   </servlet-mapping>

    <!-- admin -->
   <servlet>
     <servlet-name>admin</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.AdminServlet</servlet-class> 
   </servlet>

   <servlet-mapping>
     <servlet-name>admin</servlet-name>
     <url-pattern>/admin</url-pattern>
   </servlet-mapping>

    <!-- crawler -->
   <servlet>
     <servlet-name>crawler</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.CrawlerServlet</servlet-class> 
   </servlet>

   <servlet-mapping>
     <servlet-name>crawler</servlet-name>
     <url-pattern>/crawler</url-pattern>
   </servlet-mapping>
   
</web-app>
